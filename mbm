<body>
    <!-- Hero Section -->
    <div class="hero">
        <div class="hero-content">
            <h1>Spreadsheet Visualizer</h1>
            <p>Explore and rearrange your data with interactive filtering and sorting</p>
        </div>
    </div>

    <!-- Main Container -->
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2>Explore Data</h2>
            <p class="sidebar-subtitle" id="filterCount">Loading...</p>

            <div class="form-group">
                <label for="searchInput">Search Messages</label>
                <input type="text" id="searchInput" placeholder="Find by content...">
            </div>

            <div class="form-group">
                <label for="filterInput">Filter by Name</label>
                <input type="text" id="filterInput" placeholder="Enter name...">
            </div>

            <div class="form-group">
                <label for="sortSelect">Sort By</label>
                <select id="sortSelect">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="name">By Name (A-Z)</option>
                </select>
            </div>

            <div class="stats-box">
                <div class="stat-row">
                    <span class="stat-label">Showing:</span>
                    <span class="stat-value" id="showingCount">0</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">Total:</span>
                    <span class="stat-value" id="totalCount">0</span>
                </div>
            </div>

            <button class="reset-btn hidden" id="resetBtn">
                <span>✕</span> Clear Filters
            </button>

            <div class="sidebar-info">
                <p><strong>Tip:</strong> Use the search box to find messages by content, or filter by sender name.</p>
                <p style="margin-top: 12px;">Messages are displayed in a timeline format for easy browsing.</p>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div id="content">
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading spreadsheet data...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // State management
        let allData = [];
        let searchQuery = '';
        let filterName = '';
        let sortBy = 'newest';

        // DOM elements
        const searchInput = document.getElementById('searchInput');
        const filterInput = document.getElementById('filterInput');
        const sortSelect = document.getElementById('sortSelect');
        const resetBtn = document.getElementById('resetBtn');
        const contentDiv = document.getElementById('content');
        const filterCountSpan = document.getElementById('filterCount');
        const showingCountSpan = document.getElementById('showingCount');
        const totalCountSpan = document.getElementById('totalCount');

        // Event listeners
        searchInput.addEventListener('input', (e) => {
            searchQuery = e.target.value;
            updateDisplay();
        });

        filterInput.addEventListener('input', (e) => {
            filterName = e.target.value;
            updateDisplay();
        });

        sortSelect.addEventListener('change', (e) => {
            sortBy = e.target.value;
            updateDisplay();
        });

        resetBtn.addEventListener('click', () => {
            searchQuery = '';
            filterName = '';
            sortBy = 'newest';
            searchInput.value = '';
            filterInput.value = '';
            sortSelect.value = 'newest';
            updateDisplay();
        });

        // Fetch spreadsheet data
        async function fetchData() {
            try {
                const response = await fetch(
                    'https://docs.google.com/spreadsheets/d/13PWJ2TJqTCOXkT_jAAPNUH6s0Eyp9I1BI3UDn07wjvk/export?format=csv'
                );

                if (!response.ok) throw new Error('Failed to fetch data');

                const csv = await response.text();
                const rows = csv.trim().split('\n');

                // Parse CSV data
                allData = rows.slice(1).map(row => {
                    const [timestamp, name, ...messageParts] = row.split(',');
                    return {
                        timestamp: timestamp?.trim() || '',
                        name: name?.trim() || '',
                        message: messageParts.join(',').trim() || '',
                    };
                }).filter(row => row.timestamp);

                totalCountSpan.textContent = allData.length;
                updateDisplay();
            } catch (error) {
                contentDiv.innerHTML = `
                    <div class="error">
                        <div class="error-icon">⚠</div>
                        <div class="error-content">
                            <h3>Error Loading Data</h3>
                            <p>${error.message}</p>
                        </div>
                    </div>
                `;
            }
        }

        // Filter and sort data
        function getFilteredData() {
            let result = [...allData];

            // Search filter
            if (searchQuery) {
                result = result.filter(row =>
                    row.message.toLowerCase().includes(searchQuery.toLowerCase())
                );
            }

            // Name filter
            if (filterName) {
                result = result.filter(row =>
                    row.name.toLowerCase().includes(filterName.toLowerCase())
                );
            }

            // Sort
            if (sortBy === 'newest') {
                result.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
            } else if (sortBy === 'oldest') {
                result.sort((a, b) => new Date(a.timestamp) - new Date(b.timestamp));
            } else if (sortBy === 'name') {
                result.sort((a, b) => (a.name || 'Anonymous').localeCompare(b.name || 'Anonymous'));
            }

            return result;
        }

        // Parse timestamp
        function parseTimestamp(ts) {
            try {
                const date = new Date(ts);
                return {
                    date: date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }),
                    time: date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' }),
                };
            } catch {
                return { date: ts, time: '' };
            }
        }

        // Render message card
        function renderMessageCard(message) {
            const { date, time } = parseTimestamp(message.timestamp);

            return `
                <div class="message-card">
                    <div class="message-content">
                        <div class="message-header">
                            <div class="message-tags">
                                <span class="name-tag">${message.name || 'Anonymous'}</span>
                                <span class="time-badge">${time}</span>
                            </div>
                            <span class="message-date">${date}</span>
                        </div>
                        <div class="message-body ${!message.message ? 'empty' : ''}">
                            ${message.message || '(No message content)'}
                        </div>
                    </div>
                </div>
            `;
        }

        // Update display
        function updateDisplay() {
            const filteredData = getFilteredData();
            const hasFilters = searchQuery || filterName || sortBy !== 'newest';

            // Update counts
            showingCountSpan.textContent = filteredData.length;
            filterCountSpan.textContent = `Filter: ${filteredData.length} of ${allData.length} messages`;

            // Update reset button visibility
            resetBtn.classList.toggle('hidden', !hasFilters);

            // Render content
            if (filteredData.length === 0) {
                contentDiv.innerHTML = `
                    <div class="empty-state">
                        <p>No messages found</p>
                        <p class="subtitle">Try adjusting your filters or search query</p>
                    </div>
                `;
            } else {
                const timelineHtml = `
                    <div class="timeline-header">
                        <h2>Message Timeline</h2>
                        <p>${filteredData.length} message${filteredData.length !== 1 ? 's' : ''} displayed</p>
                    </div>
                    <div class="timeline">
                        ${filteredData.map(msg => renderMessageCard(msg)).join('')}
                    </div>
                `;
                contentDiv.innerHTML = timelineHtml;
            }
        }

        // Initialize
        fetchData();
    </script>
</body>
</html>
